<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/group_banner_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:clipToOutline="true"
        android:background="@drawable/event_banner_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/group_banner_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#가족과"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/group_banner_iv"
        app:layout_constraintBottom_toBottomOf="@id/group_banner_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>