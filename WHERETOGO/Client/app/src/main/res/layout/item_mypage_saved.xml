<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_mypage_like_frame"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/mypage_like_event_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:src="@drawable/img_mypage_panel"
        android:background="@drawable/event_banner_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <View
        android:id="@+id/mypage_like_background_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:background="@drawable/event_banner_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/item_mypage_like_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_like_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id = "@+id/item_mypage_liked_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평가하기"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/item_mypage_like_tag_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_like_title_tv"
        android:layout_width="270dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="98dp"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pd_semibold"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_like_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/item_mypage_like_end_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"

        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_mypage_like_date_tv"
        />
    <ImageButton
        android:id="@+id/item_mypage_visited_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="250dp"
        tools:srcCompat="@drawable/btn_check_unclick"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"/>


    <ImageButton
        android:id="@+id/item_mypage_like_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        tools:srcCompat="@drawable/btn_like_unclick"
        android:background="@color/transparent"
        app:layout_constraintStart_toEndOf="@id/item_mypage_visited_btn"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_like_title_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>