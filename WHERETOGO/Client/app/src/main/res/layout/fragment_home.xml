<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.home.HomeFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_tab_layout"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="9dp"
            app:tabBackground="@drawable/home_tab_selector"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingStart="5dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:id="@+id/home_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_tab_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/home_tag_title1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="#지금 인기있는"
                    android:textColor="@color/purple"
                    android:textSize="18sp"
                    android:fontFamily="@font/pd_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/home_title1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 행사예요"
                    android:textSize="18sp"
                    android:fontFamily="@font/pd_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_tag_title1_tv"/>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/home_event1_vp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/home_tag_title1_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_ll1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/home_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="USER"
                    android:textColor="@color/purple"
                    android:textSize="18sp"
                    android:fontFamily="@font/pd_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/home_title2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="님을 위한 추천"
                    android:textSize="18sp"
                    android:fontFamily="@font/pd_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/home_user_name_tv"/>
                <TextView
                    android:id="@+id/home_explain1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/pd_semibold"
                    app:layout_constraintTop_toBottomOf="@id/home_user_name_tv"
                    app:layout_constraintStart_toStartOf="@id/home_user_name_tv"/>
                <TextView
                    android:id="@+id/home_explain2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="모두에게 인기있는 행사"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/home_user_name_tv"
                    app:layout_constraintStart_toEndOf="@id/home_explain1_tv"/>

                <TextView
                    android:id="@+id/home_recommend_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="2dp"
                    android:text="더보기"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/home_user_name_tv"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/home_event2_vp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/home_explain1_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_ll2"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/home_title3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누구와 함께 하시나요?"
                android:textSize="18sp"
                android:fontFamily="@font/pd_semibold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_event2_vp"/>

            <TextView
                android:id="@+id/home_explain3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="함께 가기 좋은 행사"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/home_title3_tv"
                app:layout_constraintTop_toBottomOf="@id/home_title3_tv"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_event3_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_explain3_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/home_title3_tv"
                app:layout_constraintTop_toBottomOf="@id/home_event3_vp"/>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>