<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_event_frame"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/home_popular_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_mypage_panel"
        android:background="@drawable/event_banner_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/popular_banner_background_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:background="@drawable/event_banner_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/home_popular_saved_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/home_popular_iv"/>
    <TextView
        android:id="@+id/home_popular_visited_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/home_popular_saved_count_tv"
        app:layout_constraintStart_toStartOf="@+id/home_popular_saved_count_tv"/>
    <TextView
        android:id="@+id/home_popular_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/home_popular_iv"/>
    <TextView
        android:id="@+id/home_popular_title_tv"
        android:layout_width="270dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pd_semibold"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toStartOf="@+id/home_popular_saved_count_tv"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/home_popular_start_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/home_popular_title_tv"
        app:layout_constraintStart_toStartOf="@id/home_popular_title_tv"
        />

    <TextView
        android:id="@+id/home_popular_end_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/home_popular_title_tv"
        app:layout_constraintStart_toEndOf="@+id/home_popular_start_date_tv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>