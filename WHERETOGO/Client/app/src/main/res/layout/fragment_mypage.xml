<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile_iv"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="43dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/mypage_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mypage_profile_iv"/>
    <ImageView
        android:id="@+id/mypage_setting_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="@id/mypage_nickname_tv"
        app:layout_constraintBottom_toBottomOf="@id/mypage_nickname_tv"
        app:layout_constraintStart_toEndOf="@id/mypage_nickname_tv"/>
    <TextView
        android:id="@+id/mypage_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:text="로그인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_setting_iv"
        />
    <TextView
        android:id="@+id/mypage_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/mypage_nickname_tv"
        app:layout_constraintStart_toEndOf="@id/mypage_profile_iv"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mypage_tab_layout"
        android:layout_width="214dp"
        android:layout_height="8dp"
        android:layout_marginTop="35dp"
        app:tabBackground="@drawable/mypage_tab_selector"
        android:contentDescription="maypage_tablayout"
        app:tabIndicatorHeight="0dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/mypage_email_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mypage_vp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>