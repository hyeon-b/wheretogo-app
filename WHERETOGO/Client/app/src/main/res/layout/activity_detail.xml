<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_back_btn"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_guide_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="상세정보"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/detail_back_btn"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/detail_line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_back_btn"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:id="@+id/detail_kind"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/detail_line"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/detail_kind_tv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="#역사"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/detail_tag_border"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/detail_event_visited_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/pd_medium"
            app:layout_constraintTop_toBottomOf="@id/detail_kind"
            app:layout_constraintEnd_toStartOf="@id/detail_event_check_btn"/>
        <TextView
            android:id="@+id/detail_event_saved_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pd_medium"
            app:layout_constraintTop_toBottomOf="@id/detail_kind"
            app:layout_constraintStart_toEndOf="@+id/detail_event_visited_count" />
        <TextView
            android:id="@+id/detail_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022 궁중 문화축전"
            app:layout_constraintTop_toBottomOf="@id/detail_event_visited_count"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="21sp"
            android:fontFamily="@font/pd_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_check_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_check_click"
            app:layout_constraintEnd_toStartOf="@+id/detail_event_like_btn"
            app:layout_constraintTop_toTopOf="@id/detail_line" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_uncheck_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_check_unclick"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/detail_event_like_btn"
            app:layout_constraintTop_toTopOf="@id/detail_line" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_like_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/btn_like_click"
            app:layout_constraintTop_toTopOf="@id/detail_line"
            app:layout_constraintEnd_toEndOf="parent"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_event_dislike_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            android:src="@drawable/btn_like_unclick"
            app:layout_constraintTop_toTopOf="@id/detail_line"
            app:layout_constraintEnd_toEndOf="parent"/>


        <LinearLayout
            android:id="@+id/detail_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp">
            <ImageView
                android:id="@+id/detail_event_place_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:id="@+id/detail_date_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    app:layout_constraintTop_toBottomOf="@id/detail_event_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="일시    "/>
                <TextView
                    android:id="@+id/detail_date_data_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    app:layout_constraintTop_toBottomOf="@id/detail_event_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="2022-05-10 ~ "/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_time_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detail_event_start_date"
                    android:text="시간    "/>
                <TextView
                    android:id="@+id/detail_time_data_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    app:layout_constraintTop_toBottomOf="@id/detail_event_start_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:lineSpacingExtra="3dp"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_place_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="장소    "/>
                <TextView
                    android:id="@+id/detail_place_data_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:text="서울"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_cost_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="비용    " />

                <TextView
                    android:id="@+id/detail_cost_data_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:lineSpacingExtra="3.15dp"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_age_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="연령제한 "/>
                <TextView
                    android:id="@+id/detail_age_data_tv"
                    android:layout_width="300dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"

                    android:text="프로그램별 상이"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_bookUrl_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="예매 사이트"/>
                <TextView
                    android:id="@+id/detail_bookUrl_data_tv"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_tel_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="전화번호  "/>
                <TextView
                    android:id="@+id/detail_tel_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:lineSpacingExtra="3.15dp"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_overview_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="상세정보  "/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_overview_data_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/detail_overview_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3.15dp"
                    android:text=""/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_homepage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="홈페이지  "/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_homepage_data_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/detail_homepage_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3.15dp"
                    android:text=""/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_map_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="지도  "/>
                <com.naver.maps.map.MapView
                    android:id="@+id/map_view"
                    android:layout_marginTop="20dp"
                    android:layout_width="400dp"
                    android:layout_height="300dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="후기"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평점"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.willy.ratingbar.BaseRatingBar
                        android:id="@+id/detail_review_ratingbar"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srb_drawableEmpty="@drawable/mypage_star_off"
                        app:srb_drawableFilled="@drawable/mypage_star_on"
                        app:srb_isIndicator="false"
                        app:srb_minimumStars="1"
                        app:srb_numStars="5"
                        app:srb_rating="1"
                        app:srb_scrollable="false"
                        app:srb_starHeight="35dp"
                        app:srb_starWidth="35dp"
                        app:srb_stepSize="0.1" />
                    <TextView
                        android:id="@+id/detail_review_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pd_semibold"
                        android:text="이 행사를"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="펼처보기"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/detail_blog_title_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pd_semibold"
                    android:text="블로그 후기"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_blog_rv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_search_blog"
            app:layout_constraintTop_toBottomOf="@id/detail_linear_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/detail_more_blog_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="블로그 후기 더보기"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_blog_rv"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail_star_panel"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:elevation="10dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_event_check_btn"
            android:background="@color/gray">

            <com.willy.ratingbar.BaseRatingBar
                android:id="@+id/detail_visited_ratingbar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srb_drawableEmpty="@drawable/mypage_star_off"
                app:srb_drawableFilled="@drawable/mypage_star_on"
                app:srb_isIndicator="false"
                app:srb_minimumStars="1"
                app:srb_numStars="3"
                app:srb_rating="1"
                app:srb_scrollable="true"
                app:srb_starHeight="40dp"
                app:srb_starWidth="40dp"
                app:srb_stepSize="1" />

            <TextView
                android:id="@+id/detail_adapt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                app:layout_constraintEnd_toStartOf="@id/detail_cancel_tv"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="확인"/>
            <TextView
                android:id="@+id/detail_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="취소"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>