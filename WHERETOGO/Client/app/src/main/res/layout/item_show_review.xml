<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/item_review_l1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_review_user_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_review_l1"/>
    <TextView
        android:id="@+id/item_review_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:text="닉네임"
        android:fontFamily="@font/pd_semibold"
        app:layout_constraintTop_toTopOf="@id/item_review_user_iv"
        app:layout_constraintStart_toEndOf="@id/item_review_user_iv"/>
    <TextView
        android:id="@+id/item_review_userinfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="20대/여성"
        app:layout_constraintTop_toBottomOf="@+id/item_review_name_tv"
        app:layout_constraintStart_toStartOf="@+id/item_review_name_tv"/>
    <TextView
        android:id="@+id/item_review_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:textSize="12sp"
        android:text="2022.05.17"
        app:layout_constraintTop_toTopOf="@id/item_review_name_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_review_report_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="신고하기"
        app:layout_constraintTop_toBottomOf="@id/item_review_date_tv"
        app:layout_constraintEnd_toEndOf="@id/item_review_date_tv"/>
    <com.willy.ratingbar.BaseRatingBar
        android:id="@+id/item_review_rb"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srb_drawableEmpty="@drawable/mypage_star_off"
        app:srb_drawableFilled="@drawable/mypage_star_on"
        app:srb_isIndicator="false"
        app:srb_clickable="false"
        app:srb_minimumStars="1"
        app:srb_starPadding="-20dp"
        app:srb_numStars="5"
        app:srb_rating="1"
        app:srb_starHeight="18dp"
        app:srb_starWidth="18dp"
        app:srb_stepSize="1"
        app:layout_constraintTop_toBottomOf="@id/item_review_userinfo_tv"
        app:layout_constraintStart_toStartOf="@id/item_review_name_tv"/>

    <ImageView
        android:id="@+id/item_review_event_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/content_border"
        app:layout_constraintTop_toBottomOf="@id/item_review_rb"
        app:layout_constraintStart_toStartOf="@id/item_review_rb"/>
    <TextView
        android:id="@+id/item_review_company_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/purple"
        android:fontFamily="@font/pd_semibold"
        android:text="#가족과"
        app:layout_constraintTop_toBottomOf="@id/item_review_event_iv"
        app:layout_constraintStart_toStartOf="@id/item_review_event_iv"/>
    <TextView
        android:id="@+id/item_review_company_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 이 행사를 다녀왔어요"
        app:layout_constraintTop_toTopOf="@id/item_review_company_tv"
        app:layout_constraintStart_toEndOf="@id/item_review_company_tv"/>

    <TextView
        android:id="@+id/item_review_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_review_company_tv"
        app:layout_constraintStart_toStartOf="@id/item_review_company_tv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_review_content_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>