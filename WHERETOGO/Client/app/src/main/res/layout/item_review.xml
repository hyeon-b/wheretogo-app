<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp">
    <View
        android:id="@+id/item_review_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_review_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_review_line"/>

    <TextView
        android:id="@+id/item_review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_review_nickname"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.willy.ratingbar.BaseRatingBar
        android:id="@+id/item_review_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srb_drawableEmpty="@drawable/mypage_star_off"
        app:srb_drawableFilled="@drawable/mypage_star_on"
        android:layout_marginStart="5dp"
        app:srb_isIndicator="false"
        app:srb_clickable="false"
        app:srb_minimumStars="1"
        app:srb_scrollable="false"
        app:srb_starPadding="-20dp"
        app:srb_numStars="5"
        app:srb_rating="1"
        app:srb_starHeight="18dp"
        app:srb_starWidth="18dp"
        app:srb_stepSize="0.5"
        app:layout_constraintTop_toBottomOf="@id/item_review_nickname"
        app:layout_constraintStart_toStartOf="@id/item_review_nickname"/>
    <TextView
        android:id="@+id/item_review_company_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/deep_purple"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/item_review_ratingbar"
        app:layout_constraintStart_toStartOf="@id/item_review_ratingbar"/>
    <TextView
        android:id="@+id/item_review_company_extra_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 행사를 다녀왔어요!"
        android:scrollbarSize="15sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/item_review_company_tv"
        app:layout_constraintStart_toEndOf="@+id/item_review_company_tv"/>
    <TextView
        android:id="@+id/item_review_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@id/item_review_ratingbar"
        app:layout_constraintTop_toBottomOf="@id/item_review_company_tv"/>
    <ImageView
        android:id="@+id/item_review_iv"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_review_company_tv"
        app:layout_constraintStart_toStartOf="@id/item_review_ratingbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>