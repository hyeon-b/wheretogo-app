<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_mypage_like_frame"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/mypage_visited_event_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:background="@drawable/event_banner_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <View
        android:id="@+id/mypage_visited_background_iv"
        android:layout_width="326dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:background="@drawable/event_banner_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/item_mypage_visited_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.willy.ratingbar.BaseRatingBar
        android:id="@+id/my_visited_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_mypage_visited_count_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:srb_drawableEmpty="@drawable/mypage_star_off"
        app:srb_drawableFilled="@drawable/mypage_star_on"
        app:srb_isIndicator="false"
        app:srb_clickable="false"
        app:srb_minimumStars="1"
        app:srb_scrollable="false"
        app:srb_starPadding="-20dp"
        app:srb_numStars="5"
        app:srb_rating="1"
        app:srb_starHeight="18dp"
        app:srb_starWidth="18dp"
        app:srb_stepSize="0.5" />
    <TextView
        android:id="@+id/item_mypage_visited_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_visited_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평가하기"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_visited_tag_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_visited_title_tv"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="98dp"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pd_semibold"
        android:letterSpacing="0.05"
        android:layout_width="270dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_mypage_visited_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/item_mypage_visited_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/item_mypage_like_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="6dp"
        tools:src="@drawable/btn_like_unclick"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
        android:id="@+id/item_mypage_visited_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="13dp"
        tools:src="@drawable/btn_check_unclick"
        android:background="@color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/item_mypage_like_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>