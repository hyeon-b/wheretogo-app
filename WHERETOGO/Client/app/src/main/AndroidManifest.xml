        android:theme="@style/Theme.WHERETOGO"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.guide.GuideActivity"
            android:exported="true" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.recommend.RecommendActivity"
            android:exported="true" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".ui.setting.ChangeInfoActivity"
            android:exported="true" />
        <activity
            android:name=".ui.setting.ChangePwdActivity"
            android:exported="true" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="true" />
        <activity
            android:name=".ui.setting.InquiryActivity"
            android:exported="true" />
        <activity
            android:name=".ui.keyword.KeywordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.detail.BlogDetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.review.ReviewActivity"
            android:exported="true" />
        <activity
            android:name=".ui.popular.GroupPopularActivity"
            android:exported="true" />
        <service android:name=".MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="sjghwbhs3t" />
